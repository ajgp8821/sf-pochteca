<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>POCH_DirectorGeneral</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>POCH_CentroSuministrador__c</field>
        <field>POCH_Estatus__c</field>
        <field>POCH_OrganizacionVentas__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>POCH_ActualizarTipoRegistro</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>POCH_UpdateSuccess</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Paso 1</label>
        <name>Paso_1</name>
        <rejectionActions>
            <action>
                <name>Modificar_Registro</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>POCH_UpdateFail</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Proceso de aprobaci√≥n cuando la cuenta pasa a tipo de registro: Cliente</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account.RecordType</field>
            <operation>notEqual</operation>
            <value>Venta mostrador</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>POCH_ActualizarTipoRegistro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>POCH_UpdateSuccess</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Cliente_Rechazado</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Modificar_Registro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>POCH_UpdateFail</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>POCH_ActualizarTipoRegistro</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Submitted_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>aprobarCliente</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
